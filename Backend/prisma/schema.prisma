generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PARTICIPANT
  SCHOOL_AMBASSADOR
}

model User {
  id          Int               @id @default(autoincrement())
  name        String            @db.VarChar(191)
  email       String            @unique @db.VarChar(191)
  password    String?
  role        Role?
  profile     String?
  googleId    String?           @unique
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  // Relations
  participant Participant?
  ambassador  SchoolAmbassador?
}

model Participant {
  id            Int     @id @default(autoincrement())
  userId        Int     @unique
  name          String
  contactNumber String
  class         Class
  referralCode  String
  schoolName    String
  extraInfo     String? // Any extra fields specific to School Ambassadors
  user          User    @relation(fields: [userId], references: [id])
}

model SchoolAmbassador {
  id            Int     @id @default(autoincrement())
  userId        Int     @unique
  name          String
  contactNumber String
  schoolName    String
  extraInfo     String? // Any extra fields specific to School Ambassadors
  user          User    @relation(fields: [userId], references: [id])
}

enum Class {
  METIOX
  APOLLOX
  ATHENOX
}
